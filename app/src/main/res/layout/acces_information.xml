<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Acces_information">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="4dp"
                android:text="1. إرشادات خاصة بطالب النفاذ إلى المعلومة*"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:text="شخص طبيعي "
                android:verticalScrollbarPosition="right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="66dp"
                android:text="شخص معنوي"
                app:layout_constraintEnd_toStartOf="@+id/rb1"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:text="الإسم واللقب / التسمية الإجتماعية:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="111dp"
                android:layout_height="23dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:text="البريد الإلكتروني:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb2" />

            <EditText
                android:id="@+id/email"
                android:layout_width="189dp"
                android:layout_height="36dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_info"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/np"
                android:layout_width="182dp"
                android:layout_height="37dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/button_info"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:text="الهاتف:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/np" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:layout_marginTop="10dp"
                android:text="الفاكس:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/ntel"
                android:layout_width="181dp"
                android:layout_height="38dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/button_info"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/fax"
                android:layout_width="191dp"
                android:layout_height="38dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_info"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"

                android:text="العنوان / عنوان المقر الإجتماعي:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ntel" />

            <EditText
                android:id="@+id/addr"
                android:layout_width="384dp"
                android:layout_height="49dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/button_info"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="418dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:text="2. صيغة النفاذ إلى المعلومة المطلوب النفاذ إليها*"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fax"
                tools:ignore="NotSibling" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="2dp"
                android:text="الاطلاع على المعلومة على عين المكان (ما لم يكن في ذلك إضرار بها)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="2dp"
                android:text="الحصول على نسخة إلكترونية من المعلومة (عند الإمكان)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb3" />

            <RadioButton
                android:id="@+id/rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="2dp"
                android:text="الحصول على نسخة ورقية من المعلومة"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb4" />

            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="2dp"
                android:text="الحصول على مقتطفات من المعلومة"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb5" />

            <Button
                android:id="@+id/btn_n"
                android:layout_width="186dp"
                android:layout_height="35dp"
                android:layout_marginStart="153dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="153dp"
                android:background="@drawable/btn_info"
                android:text="إرسال"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rb6" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>






</FrameLayout>